@model IEnumerable<AdminLoginCode.Controllers.CourseDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="border:1px solid black;background-color:#f9f9f9;width:100%;padding:10px;box-shadow:2px,2px,12px,rgba(0,0,0,0.1);border-collapse:collapse;">
    <tr>
        <th style="border: 1px solid black; padding: 8px;">
            @Html.DisplayNameFor(model => model.Course_Id)
        </th>
        <th style="border: 1px solid black; padding: 8px;">
            @Html.DisplayNameFor(model => model.Course_Name)
        </th>
        <th style="border: 1px solid black; padding: 8px;">
            @Html.DisplayNameFor(model => model.Course_Description)
        </th>
        <th style="border: 1px solid black; padding: 8px;">
            @Html.DisplayNameFor(model => model.Course_Fee)
        </th>
        <th style="border: 1px solid black; padding: 8px;">
            @Html.DisplayNameFor(model => model.FacultyName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="border: 1px solid black; padding: 8px;">
                @Html.DisplayFor(modelItem => item.Course_Id)
            </td>
            <td style="border: 1px solid black; padding: 8px;">
                @Html.DisplayFor(modelItem => item.Course_Name)
            </td>
            <td style="border: 1px solid black; padding: 8px;">
                @Html.DisplayFor(modelItem => item.Course_Description)
            </td>
            <td style="border: 1px solid black; padding: 8px;">
                @Html.DisplayFor(modelItem => item.Course_Fee)
            </td>
            <td style="border: 1px solid black; padding: 8px;">
                @Html.DisplayFor(modelItem => item.FacultyName)
            </td>
            <td style="border: 1px solid black; padding: 8px;">
                @Html.ActionLink("Edit", "Edit", new { id = item.Course_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Course_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Course_Id })
            </td>

        </tr>
    }
    <a href="/ALogin/StudentDashBoard" class="btn btn-info">Back</a>
</table>
<style>
    body {
        background-image: url('../../images/presentation-background-template-design-67e2017a395b1ee93341c510f9d9c41e_screen.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        height: 100vh;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        margin: 20px 0;
    }

        .table th, .table td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: left;
        }

        .table th {
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

        .table td {
            transition: background-color 0.3s;
        }

            .table td:hover {
                background-color: #eaeaea;
            }
</style>